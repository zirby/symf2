{% block main %}

       <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Compagnies</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-apple fa-fw"></i> Liste des compagnies
                            <div class="pull-right">
                                <a class="btn btn-primary btn-xs" href="{{ path ('erp_add_company') }}" role="button"><i class="fa fa-plus"></i> Compagnie</a>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nom</th>
                                            <th>Téléphone</th>
                                            <th>Url</th>
                                            <th>action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for company in companies %}
                                        <tr class="odd gradeX">
                                            <td>{{ company.id }}</td>
                                            <td>{{ company.name }}</td>
                                            <td>{{ company.tel }}</td>
                                            <td>{{ company.url }}</td>
                                            <td class="center">X</td>
                                        </tr>
                                        {% endfor %}
                                     </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
        
        
        {% endblock %}

